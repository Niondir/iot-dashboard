{
  "env": {
    "browser": true,
    "es6": true
  },
  "parser": "babel-eslint",
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaFeatures": {
      "experimentalObjectRestSpread": false,
      "jsx": true
    },
    "sourceType": "module"
  },
  "plugins": [
    "react",
    "flowtype"
  ],
  "rules": {
    "indent": [
      "off",
      4,
      {
        "SwitchCase": 1
      }
    ],
    "linebreak-style": [
      "off",
      "windows"
    ],
    "no-case-declarations": "off",
    "one-var": ["error", {
      "initialized": "never"
    }],
    "no-var": "error",
    "prefer-const": "error",
    // To be considdered:
    "no-unused-vars": "off",
    "no-console": "off",
    "no-undef": "off",
    // -- END To be considdered
    "quotes": [
      "off",
      "double"
    ],
    "semi": [
      "off",
      "always"
    ],
    "react/prop-types": "off"
  }
}